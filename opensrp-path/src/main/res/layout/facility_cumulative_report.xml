<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <org.smartregister.view.customcontrols.CustomFontTextView
            android:id="@+id/report_title"
            style="@style/CustomFontTextViewStyle.ClientList.Medium"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:text="title"
            android:textColor="@color/text_black"
            android:textSize="22sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <org.smartregister.view.customcontrols.CustomFontTextView
                android:id="@+id/cso_target_label"
                style="@style/CustomFontTextViewStyle.ClientList.Light"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:text="@string/cso_target_label"
                android:textColor="@color/text_black"
                android:textSize="18sp" />


            <org.smartregister.view.customcontrols.CustomFontTextView
                android:id="@+id/cso_target_value"
                style="@style/CustomFontTextViewStyle.ClientList.Light"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:text="209"
                android:textColor="@color/text_black"
                android:textSize="18sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <org.smartregister.view.customcontrols.CustomFontTextView
                android:id="@+id/cso_target_monthly"
                style="@style/CustomFontTextViewStyle.ClientList.Light"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:text="@string/cso_target_monthly"
                android:textColor="@color/text_black"
                android:textSize="18sp" />


            <org.smartregister.view.customcontrols.CustomFontTextView
                android:id="@+id/cohort_size_value"
                style="@style/CustomFontTextViewStyle.ClientList.Light"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:text="17"
                android:textColor="@color/text_black"
                android:textSize="18sp" />

        </LinearLayout>

        <lecho.lib.hellocharts.view.LineChartView
            android:id="@+id/monitoring_chart"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_margin="20dp" />


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/client_list_grey"
            android:stretchColumns="0">

            <TableRow
                android:layout_margin="0.5dp"
                android:background="#FFFFFF">

                <TextView android:padding="10dp" />


                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/client_list_grey" />

                <TextView
                    android:layout_width="55dp"
                    android:padding="10dp" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/client_list_grey" />

                <TextView
                    android:layout_width="55dp"
                    android:padding="10dp" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/client_list_grey" />

                <TextView
                    android:layout_width="55dp"
                    android:padding="10dp" />


                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/client_list_grey" />

                <TextView
                    android:layout_width="55dp"
                    android:padding="10dp" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/client_list_grey" />

                <TextView
                    android:layout_width="55dp"
                    android:padding="10dp" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/client_list_grey" />

                <TextView
                    android:layout_width="55dp"
                    android:padding="10dp" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/client_list_grey" />

                <TextView
                    android:layout_width="55dp"
                    android:padding="10dp" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/client_list_grey" />

                <TextView
                    android:layout_width="55dp"
                    android:padding="10dp" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/client_list_grey" />

                <TextView
                    android:layout_width="55dp"
                    android:padding="10dp" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/client_list_grey" />

                <TextView
                    android:layout_width="55dp"
                    android:padding="10dp" />


                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/client_list_grey" />

                <TextView
                    android:layout_width="55dp"
                    android:padding="10dp" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/client_list_grey" />

                <TextView
                    android:layout_width="55dp"
                    android:padding="10dp" />


            </TableRow>
        </TableLayout>


    </LinearLayout>

</android.support.v4.widget.NestedScrollView>